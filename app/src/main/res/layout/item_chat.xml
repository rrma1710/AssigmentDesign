<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/img_foto_chat"
        android:scaleType="centerCrop"
        android:src="@drawable/satu"
        android:layout_margin="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv_nama_chat"
                android:layout_weight="1"
                android:fontFamily="@font/poppins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Panggilan"
                android:textSize="15dp"
                android:layout_marginBottom="10dp"/>
            <TextView
                android:id="@+id/tv_waktu_chat"
                android:gravity="end"
                android:fontFamily="@font/poppins"
                android:layout_weight="7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10m"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_isi_chat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#787878"
            android:maxLines="1"
            android:fontFamily="@font/poppins"
            android:ellipsize="end"
            android:text="Ini merupakan isi pesan dari pengguna"/>
    </LinearLayout>


</LinearLayout>